<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Webscript for checking if ElasticSearch is available -->
	<!--<bean id="webscript.utils.elasticsearch.available.get" parent="webscript" class="eu.europa.ec.valor.elasticsearch.utils.CheckIfElasticSearchIsAvailableWebScript"/>-->
	
	<!-- Webscript for ES searches -->
	<bean id="webscript.search.elasticsearch.search.get" parent="webscript" class="eu.europa.ec.valor.elasticsearch.search.PublicSearchWebScript"/>
	
	<!-- Webscript for retrieving all the projects for the compendia -->
	<bean id="webscript.search.elasticsearch.projectscompendia.get" parent="webscript" class="eu.europa.ec.valor.elasticsearch.search.PublicSearchProjectsCompendiaWebScript"/>
	<!-- Webscript for ES searches for CSV export -->
	<bean id="webscript.search.elasticsearch.exportcsv.get" parent="webscript" class="eu.europa.ec.valor.elasticsearch.search.PublicSearchWebScript"/>
	<!-- Webscript for ES searches for Excel export -->
	<bean id="webscript.search.elasticsearch.exportexcel.get" parent="webscript" class="eu.europa.ec.valor.elasticsearch.search.PublicSearchExportExcelWebScript">
		<property name="maximumResultsExported" value="1000" />
	</bean>
	<!-- Webscript for ES searches on the map -->
	<bean id="webscript.search.elasticsearch.searchmap.get" parent="webscript" class="eu.europa.ec.valor.elasticsearch.search.PublicSearchMapWebScript"/>
	<!-- Webscript for ES searches on the map -->
	<bean id="webscript.search.elasticsearch.searchmapcluster.get" parent="webscript" class="eu.europa.ec.valor.elasticsearch.search.PublicSearchMapClusterWebScript">
		<property name="valorCCM2" ref="valorCCM2" />
	</bean>

	<!-- Webscript for Erasmus+ Projects Compendium -->
	<!--
	<bean id="webscript.search.eplus_projectscompendium.get" parent="webscript" class="eu.europa.ec.valor.elasticsearch.search.ProjectsCompendiumWebScript">
		<property name="compendiumTitle" value="Erasmus+ Projects Compendium" />
		<property name="compendiumFilename" value="ErasmusPlus_Projects_Compendium" />
		<property name="projectsCompendiumGenerator" ref="projectsCompendiumGenerator" />
	</bean>
	-->

	<!-- Webscript for ES inserts -->
	<bean id="webscript.project.elasticsearch.insert.post" parent="webscript" class="eu.europa.ec.valor.elasticsearch.project.insert.InsertWebScript"/>
	<!-- Webscript for ES deletes -->
	<bean id="webscript.project.elasticsearch.delete.post" parent="webscript" class="eu.europa.ec.valor.elasticsearch.project.delete.DeleteWebScript"/>

	<bean id="webscript.project.common.projectPDF.get" class="eu.europa.ec.valor.project.ProjectCardPDFGet" parent="webscript"></bean>

	<bean id="webscript.project.common.hermesResultAttachment.get" class="eu.europa.ec.valor.project.HermesResultAttachmentGet" parent="webscript"></bean>

</beans>
